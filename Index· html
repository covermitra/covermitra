  <script>
    // Basic product dataset — replace with real images/IDs when you add products
    const products = [
      {id:1,title:'Gloss Armor — iPhone 15',price:799,desc:'Slim glossy protective case',img:'',model:'iPhone 15'},
      {id:2,title:'Matte Shield — Samsung S24',price:749,desc:'Anti-slip matte finish',img:'',model:'Samsung S24'},
      {id:3,title:'Transparent Flex — Pixel 8',price:699,desc:'Clear flexible TPU cover',img:'',model:'Pixel 8'},
      {id:4,title:'Canvas Art — iPhone 14',price:899,desc:'Artist-designed print',img:'',model:'iPhone 14'},
      {id:5,title:'Rugged Bumper — OnePlus 12',price:999,desc:'Heavy-duty shock protection',img:'',model:'OnePlus 12'},
      {id:6,title:'EcoFiber — Universal',price:549,desc:'Biodegradable fabric-backed case',img:'',model:'Universal'}
    ];

    // Render product cards
    const grid = document.getElementById('product-grid');
    products.forEach(p=>{
      const card = document.createElement('article');
      card.className = 'product';
      card.innerHTML = `
        <div class="prod-img">${p.img?`<img src="${p.img}" alt="${p.title}" style="max-width:100%;height:100%;object-fit:cover;border-radius:8px">`:'Image'}</div>
        <h4 class="prod-title">${p.title}</h4>
        <div class="prod-price">₹${p.price}</div>
        <div style="color:var(--muted);font-size:13px">${p.model}</div>
        <div class="prod-meta">
          <button class="btn" onclick='openModal(${p.id})'>Quick view</button>
          <button class="cta" style="background:var(--primary);color:white" onclick="addToCart('${p.title}',${p.price})">Buy — ₹${p.price}</button>
        </div>
      `;
      grid.appendChild(card);
    });

    // Modal behaviour
    let currentProduct = null;
    function openModal(id){
      const p = products.find(x=>x.id===id);
      currentProduct = p;
      document.getElementById('modal-title').innerText = p.title;
      document.getElementById('modal-desc').innerText = p.desc;
      document.getElementById('modal-price').innerText = '₹'+p.price;
      document.getElementById('qty').value = 1;
      document.getElementById('modal').classList.add('open');
      document.getElementById('modal').setAttribute('aria-hidden','false');
    }
    function closeModal(){
      document.getElementById('modal').classList.remove('open');
      document.getElementById('modal').setAttribute('aria-hidden','true');
    }

    // Simple cart saved in localStorage
    function getCart(){
      return JSON.parse(localStorage.getItem('cc_cart')||'[]');
    }
    function saveCart(c){
      localStorage.setItem('cc_cart',JSON.stringify(c));
      updateCartCount();
    }
    function updateCartCount(){
      const count = getCart().reduce((s,i)=>s+i.qty,0);
      document.getElementById('cart-count').innerText = count;
    }
    function addToCart(title,price){
      const cart = getCart();
      const existing = cart.find(i=>i.title===title);
      if(existing){ existing.qty += 1; } else { cart.push({title,price,qty:1}); }
      saveCart(cart);
      alert('Added to cart — '+title);
    }
    function modalAddToCart(){
      const qty = Number(document.getElementById('qty').value)||1;
      const cart = getCart();
      const existing = cart.find(i=>i.title===currentProduct.title);
      if(existing) existing.qty += qty; else cart.push({title:currentProduct.title,price:currentProduct.price,qty});
      saveCart(cart); closeModal();
      alert('Added '+qty+' × '+currentProduct.title+' to cart');
    }

    // On page load
    document.getElementById('year').innerText = new Date().getFullYear();
    updateCartCount();

    // Simple checkout example: this just builds an order summary and opens mailto or PayPal link placeholder.
    // For production use: integrate Stripe / Razorpay / PayPal checkout.
    function checkout(){
      const cart = getCart();
      if(!cart.length){ alert('Your cart is empty'); return; }
      const total = cart.reduce((s,i)=>s + i.price * i.qty, 0);
      // Replace the following with real checkout integration
      const summary = cart.map(i=>`${i.qty}× ${i.title} — ₹${i.price*i.qty}`).join('\n');
      const body = `Order summary:\n${summary}\n\nTotal: ₹${total}\n\nCustomer info:\nName:\nPhone:\nAddress:\n`;
      // Open mail client as a simple order mechanism (not secure). Replace in production.
      window.location.href = 'mailto:orders@covercraft.example?subject=New order&body='+encodeURIComponent(body);
    }

    // Attach a quick 'cart' anchor handler
    document.querySelectorAll('a[href="#cart"]').forEach(el=>el.addEventListener('click',function(e){e.preventDefault();
      const cart = getCart();
      if(!cart.length){ alert('Cart is empty'); return; }
      const total = cart.reduce((s,i)=>s + i.price * i.qty, 0);
      const lines = cart.map(i=>`${i.qty}× ${i.title} — ₹${i.price*i.qty}`).join('\n');
      if(confirm(`Your cart:\n${lines}\n\nTotal: ₹${total}\n\nGo to checkout?`)) checkout();
    }));

  </script>
</body>
