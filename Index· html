          <div class="modal-close" onclick="closeModal()">✕</div>
        </div>

        <div style="margin-top:12px">
          <label style="font-size:13px;color:var(--muted)">Quantity</label>
          <input id="qty" type="number" value="1" min="1" style="width:80px;padding:8px;border-radius:8px;border:1px solid rgba(15,23,42,0.06);margin-top:6px">
        </div>

        <div style="margin-top:14px;display:flex;gap:8px">
          <button class="cta" onclick="modalAddToCart()">Add to cart</button>
          <button class="btn" onclick="closeModal()">Cancel</button>
        </div>
