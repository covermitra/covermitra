  <!-- Simple product modal + small cart using localStorage -->
  <div id="modal" class="modal" role="dialog" aria-hidden="true">
    <div class="modal-card" role="document">
      <div>
        <div style="font-weight:700;margin-bottom:8px" id="modal-title">Product</div>
        <div id="modal-image" style="height:260px;border-radius:10px;background:#f1f5f9;display:grid;place-items:center;margin-bottom:12px">Image</div>
